extends layout

include _onboard

block body
  +onboard(t('Disposable addresses'), t('Ready to get started and create a disposable email address?'), `${l('/faq')}?redirect_to=${l('/my-account/domains/aliases/new')}`, l('/my-account/domains/aliases/new'), 'border-bottom')
  .container.py-5
    .text-center.mb-5
      .h2.display-3.mb-1
        i.fa.fa-mail-bulk
      h1.h2.mb-0= t("Disposable Addresses")
      .small.text-black-50.text-uppercase= t("Short and Memorable Vanity Domains")
    .row.mt-3
      .col-md-6.offset-md-3
        p.lead.mb-3!= t("Use your own custom domain name or try one of our vanity domain names.")
        .alert.alert-info.mb-3!= t('<strong>Did you know?</strong> You can use your own custom domain name as a disposable email address.  Just <a href="/my-account/domains/new" class="alert-link">add a new domain</a> today to get started.')
        ol.mb-0.mt-5
          each vanityDomain in config.vanityDomains
            li.py-2
              ul.list-inline
                li.list-inline-item
                  .markdown-body.ml-0.mr-0: code= `${t("name")}@${vanityDomain}`
                li.list-inline-item
                  a.btn.btn-dark.btn-sm.text-uppercase(
                    href=`/my-account/domains/aliases/new?domain=${vanityDomain}`
                  )
                    = t("Try it now")
                    = " "
                    i.fa.fa-angle-double-right.align-middle
        p.mt-5.mb-0.text-center
          a.btn.btn-primary.btn-lg(
            href="/my-account/domains/aliases/new"
          )
            = t("Create your address")
            = " "
            i.fa.fa-angle-double-right.align-middle
