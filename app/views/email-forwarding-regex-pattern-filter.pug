extends layout

include _onboard

block body
  - const hash = "do-you-support-regular-expressions-or-regex";
  if !user
    +onboard(t('Need email regex forwarding?'), t('Skip ahead to the instructions to forward emails using regex.'), l(`/faq?hash=${hash}`), l(`/faq#${hash}`), 'border-bottom')
  .container.py-5
    .text-center.mb-5
      h1.h2.mb-0= t("Email forwarding regex")
      .small.text-black-50.text-uppercase.mb-3= t("Setup an email forwarding regex in minutes")
      p.lead.mb-3= t("Easily set up an email forwarding regex to filter and forward incoming email to your custom domain.")
      p.text-muted.mb-5.text-center
        a.btn.btn-lg.btn-primary(href=l(`/faq#${hash}`))= t("Create an email forwarding regex filter")
