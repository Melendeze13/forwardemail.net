extends layout

block body
  if !isBot(ctx.get('User-Agent'))
    #modal-pricing-video.modal.fade(
      tabindex="-1",
      role="dialog",
      aria-labelledby="modal-pricing-video-title",
      aria-hidden="true"
    )
      .modal-dialog.modal-lg(role="document")
        .modal-content
          .modal-header.text-center.d-block
            h1#modal-pricing-video-title.h4.d-inline-block.ml-4= t("Learn about our plans")
            button.close(type="button", data-dismiss="modal", aria-label="Close")
              span(aria-hidden="true") &times;
          .modal-body
            .lazyframe(
              title=t("Free Email Forwarding for Creators"),
              style="width: 100%; height: 450px",
              data-vendor="youtube_nocookie",
              data-src="https://www.youtube-nocookie.com/embed/q7zfEpn2NdA?autoplay=0"
            )
  .py-5.bg-light
    .container
      .row.mb-5
        .col.text-center
          h2.mb-3
            = t("Lightning fast email service.")
          a.btn.btn-dark.btn-lg(
            role=isBot(ctx.get('User-Agent')) ? false : "button",
            data-toggle=isBot(ctx.get('User-Agent')) ? false : "modal",
            data-target=isBot(ctx.get('User-Agent')) ? false : "#modal-pricing-video",
            target='_blank',
            rel='nofollow',
            href='https://www.youtube.com/watch?v=q7zfEpn2NdA'
          )
            i.fa.fa-play-circle
            = " "
            = t("Learn about plans")
      .row.row-cols-1.row-cols-lg-2
        .col
          .d-flex.flex-column.rounded-lg.bg-white.h-100.border-black-50.border
            .px-3.py-4
              h1.h3.text-center.font-weight-bold
                = t("Free")
              p.text-center.mb-0= t("Basic plan to get started")
            ul.list-group.list-group-flush
              li.list-group-item.d-flex.align-items-center.font-weight-bold.border-top
                i.fa.fa-fw.fa-infinity.text-primary.mr-3
                = ' '
                = t("Unlimited custom domain names")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-infinity.text-primary.mr-3
                = ' '
                = t("Unlimited email addresses and aliases")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-shield-alt.text-primary.mr-3
                = ' '
                = t("Phishing, executable, and virus protection")
                = " "
                a.btn.btn-link.text-primary.py-0(
                  href="https://spamscanner.net",
                  target="_blank",
                  rel="noopener noreferrer",
                  role="button",
                  data-toggle="tooltip",
                  data-placement="bottom",
                  aria-label=t('Spam Scanner'),
                  title=t("We built our own anti-spam, phishing, and virus protection software called Spam Scanner. It abides by the same privacy-first and zero logging policies.")
                )
                  i.fa.fa-question-circle
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-paperclip.text-primary.mr-3
                = ' '
                != t("50MB attachment limit")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t('"Send mail as" with Gmail and Outlook')
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Catch-all email addresses")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Multiple recipients per email address")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = " "
                = t("Unlimited email webhooks")
                = " "
                a.btn.btn-link.text-dark.py-0(href=l("/free-email-webhooks"), aria-label=t('Webhooks'))
                  i.fa.fa-link
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = " "
                = t("Unlimited email regex filtering")
                = " "
                a.btn.btn-link.text-dark.py-0(
                  href=l("/email-forwarding-regex-pattern-filter"),
                  aria-label=t('Regex filtering')
                )
                  i.fa.fa-link
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = " "
                = t("Custom port forwarding")
                = " "
                a.btn.btn-link.text-dark.py-0(
                  href=l("/guides/port-25-blocked-by-isp-workaround"),
                  aria-label=t('Port 25 Workaround')
                )
                  i.fa.fa-link
            .d-flex.flex-column.flex-grow-1.justify-content-end
              h2.display-4.mb-0.text-center.pt-2.px-2.pb-0
                .small.d-inline-block.text-monospace $
                span.d-inline-block.text-monospace 0
                sup.d-inline-block.h6.text-black-50
                  = "/"
                  = t("month")
              .p-2
                a.btn.btn-lg.btn-block.btn-success(
                  href=l("/my-account/domains/new")
                )
                  = t("Setup Forwarding")
                  = " "
                  i.fa.fa-angle-double-right.align-middle
        .col.mt-3.mt-lg-0
          .d-flex.flex-column.rounded-lg.bg-white.h-100.border-dark.border
            .px-3.py-4
              h1.h3.text-center.font-weight-bold
                i.fa.fa-shield.d-block.d-lg-inline.mb-2.mb-lg-0
                = " "
                = t("Enhanced Protection")
              p.text-center.mb-0= t("Advanced features and support")
            ul.list-group.list-group-flush
              li.list-group-item.d-flex.align-items-center.border-top.border-dark.bg-dark.text-white.font-weight-bold
                i.fa.fa-fw.fa-arrow-up.mr-3.d-lg-none
                i.fa.fa-fw.fa-arrow-left.mr-3.d-none.d-lg-inline
                = " "
                = t("Everything included in Free, plus:")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-lock.text-primary.mr-3
                = ' '
                = t("Enhanced email forwarding privacy")
                = " "
                button.btn.btn-link.text-primary.py-0.no-js(
                  role="button",
                  data-toggle="tooltip",
                  data-placement="bottom",
                  aria-label=t('Encrypted Configuration'),
                  title=t("No publicly searchable DNS records are used.  Instead we store your configuration in a secure and backed-up database.")
                )
                  i.fa.fa-question-circle
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-bolt.text-primary.mr-3
                = ' '
                = t("Instant DNS propagation (zero wait-time)")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-tasks.text-primary.mr-3
                = ' '
                = t("Easy to use email alias and import manager")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-tools.text-primary.mr-3
                = t("Customize spam, phishing, and filtering settings")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-code.text-primary.mr-3
                = t("Exclusive access to API features")
                = " "
                a.btn.btn-link.text-dark.py-0(href=l("/email-forwarding-api"), aria-label=t('API Features'))
                  i.fa.fa-link
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-bell.text-primary.mr-3
                = t("Custom recipient verification (optional)")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Forward newsletters to a bulk recipient list")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Automatic refunds with 30-day money-back guarantee")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t('99.99% Uptime Service Level Agreement ("SLA")')
            .d-flex.flex-column.flex-grow-1.justify-content-end
              h2.display-4.mb-0.text-center.pt-2.px-2.pb-0
                .small.d-inline-block.text-monospace $
                span.d-inline-block.text-monospace 3
                sup.d-inline-block.h6.text-black-50
                  = "/"
                  = t("month")
              .p-2
                if sortedDomains.length === 0
                  a.btn.btn-lg.btn-block.btn-success(
                    href=l("/my-account/domains/new?plan=enhanced_protection")
                  )
                    = t("Setup Forwarding")
                    = " "
                    i.fa.fa-angle-double-right.align-middle
                else
                  .btn-group.btn-block
                    button.btn.btn-lg.btn-block.btn-success.dropdown-toggle(
                      type="button",
                      data-toggle="dropdown",
                      aria-haspopup="true",
                      aria-expanded="false"
                    )= t("Select Domain")
                    .dropdown-menu.w-100
                      each domain in sortedDomains
                        a.dropdown-item(
                          href=l(`/my-account/domains/${domain.name}/billing?plan=enhanced_protection`),
                          class=domain.plan === "enhanced_protection" ? "disabled" : "",
                          aria-disabled=domain.plan === "enhanced_protection" ? "true" : "false"
                        )
                          = domain.name
                          if domain.plan === 'enhanced_protection'
                            = " ("
                            = t("already on this plan")
                            = ")"
                      .dropdown-divider
                      a.dropdown-item(
                        href=l("/my-account/domains/new?plan=enhanced_protection")
                      )
                        i.fa.fa-plus
                        = " "
                        = t("Add New Custom Domain")
        .col.mt-3
          .d-flex.flex-column.rounded-lg.bg-white.h-100.border-dark.border
            .px-3.py-4
              h1.h3.text-center.font-weight-bold
                i.fa.fa-users.d-block.d-lg-inline.mb-2.mb-lg-0
                = " "
                = t("Team")
              p.text-center.mb-0= t("For small groups and organizations")
            ul.list-group.list-group-flush
              li.list-group-item.d-flex.align-items-center.border-top.border-dark.bg-dark.font-weight-bold.text-white
                i.fa.fa-fw.fa-arrow-up.mr-3.d-lg-none
                i.fa.fa-fw.fa-arrow-left.mr-3.d-none.d-lg-inline
                = " "
                = t("Everything included in Enhanced Protection, plus:")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-infinity.text-primary.mr-3
                = ' '
                = t("Unlimited member access management")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-sitemap.text-primary.mr-3
                = ' '
                = t("Shared organizational access to domain")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Priority support requests")
            .d-flex.flex-column.flex-grow-1.justify-content-end
              h2.display-4.mb-0.text-center.pt-2.px-2.pb-0
                .small.d-inline-block.text-monospace $
                span.d-inline-block.text-monospace 9
                sup.d-inline-block.h6.text-black-50
                  = "/"
                  = t("month")
              .p-2
                if sortedDomains.length === 0
                  a.btn.btn-lg.btn-block.btn-success(
                    href=l("/my-account/domains/new?plan=team")
                  )
                    = t("Setup Forwarding")
                    = " "
                    i.fa.fa-angle-double-right.align-middle
                else
                  .btn-group.btn-block
                    button.btn.btn-lg.btn-block.btn-success.dropdown-toggle(
                      type="button",
                      data-toggle="dropdown",
                      aria-haspopup="true",
                      aria-expanded="false"
                    )= t("Select Domain")
                    .dropdown-menu.w-100
                      each domain in sortedDomains
                        a.dropdown-item(
                          href=l(`/my-account/domains/${domain.name}/billing?plan=team`),
                          class=domain.plan === "team" ? "disabled" : "",
                          aria-disabled=domain.plan === "team" ? "true" : "false"
                        )
                          = domain.name
                          if domain.plan === 'team'
                            = " ("
                            = t("already on this plan")
                            = ")"
                      .dropdown-divider
                      a.dropdown-item(
                        href=l("/my-account/domains/new?plan=team")
                      )
                        i.fa.fa-plus
                        = " "
                        = t("Add New Custom Domain")
        .col.mt-3
          .d-flex.flex-column.rounded-lg.bg-white.h-100.border-dark.border
            .px-3.py-4
              h1.h3.text-center.font-weight-bold
                = t("Enterprise")
              p.text-center.mb-0= t("Custom solutions and licensing")
            ul.list-group.list-group-flush
              li.list-group-item.d-flex.align-items-center.border-top.border-dark.bg-dark.font-weight-bold.text-white
                i.fa.fa-fw.fa-arrow-up.mr-3.d-lg-none
                i.fa.fa-fw.fa-arrow-left.mr-3.d-none.d-lg-inline
                = " "
                = t("Everything included in Team, plus:")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-file-signature.text-primary.mr-3
                = ' '
                = t("Custom licensing agreement")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-drafting-compass.text-primary.mr-3
                = ' '
                = t("Technical infrastructure design and support")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-palette.text-primary.mr-3
                = ' '
                = t("Enterprise-grade custom-branded solutions")
              li.list-group-item.d-flex.align-items-center.font-weight-bold
                i.fa.fa-fw.fa-server.text-primary.mr-3
                = ' '
                = t("Managed deployment with dedicated IP's")
              li.list-group-item.d-flex.align-items-center
                i.fa.fa-fw.fa-plus.text-primary.mr-3
                = ' '
                = t("Dedicated support from our team of experts")
            .d-flex.flex-column.flex-grow-1.justify-content-end
              .p-2
                a.btn.btn-lg.btn-block.btn-dark(
                  href=l("/help"),
                  role="button",
                  data-target="#modal-help"
                )= t("Contact Sales")
      .text-center
        .row.my-5
          .col
            h1.h2.mb-0= t("Frequently Asked Questions")
            .small.text-black-50.text-uppercase!= t('See Q&A below and <a href="%s">read our FAQ</a> for more', l("/faq"))
        .row.mt-5
          .col
            h2= t("What is the difference between Free and Enhanced Protection?")
            p.lead
              = t("The Free plan requires you to use public DNS records to store your forwarding configuration.")
              = " "
              = t("Anyone with a computer can lookup your forwarding configuration in a terminal if you are on the Free plan.")
              = " "
              = t("Unlike the Free plan, the Enhanced Protection plan uses a cryptographically generated random string to store your forwarding configuration privately.")
        .row.mb-5
          .col-12.col-md-6.my-3.my-md-0
            h2.h3= t("Free Plan")
            p.lead.text-monospace
              = "forward-email="
              strong.bg-warning= user ? user.email : "user@gmail.com"
          .col-12.col-md-6
            h2.h3= t("Enhanced Protection Plan")
            p.lead.text-monospace
              = "forward-email-site-verification="
              strong.bg-warning!= new Array(8).fill("&bull;").join("")
        .row.my-5
          .col
            h2= t("Is pricing per account or per domain?")
            p.lead
              != t("Our pricing is per account, not per domain &ndash; unlike other providers we do not charge extra.")
              = " "
              = t("You also have the ability to mix and match plans and domains.")
              = " "
              != t("For example you can set some domains on the Free plan (DNS-based) &ndash; and others on the Enhanced Protection or Team plans.")
        .row.my-5
          .col
            h2= t("Do you support email best practices?")
            p.lead
              != t('<span class="font-weight-bold">Yes.</span> We have built-in support for SPF, DKIM, DMARC, ARC, and SRS across all plans.')
              = " "
              = t("We have also worked extensively with the original authors of these specifications and other email experts to ensure perfection and high deliverability.")
        .row.my-5
          .col
            h2!= t('Can I configure <a href="%s" target="_blank" rel="noopener noreferrer">Spam Scanner</a> settings?', "https://spamscanner.net")
            p.lead
              != t('<span class="font-weight-bold">Yes.</span> You can toggle filters for adult-related content, phishing, executables, and viruses from <a href="%s">Settings</a>.', sortedDomains && sortedDomains[0] && sortedDomains[0].name ? l(`/my-account/domains/${sortedDomains[0].name}/advanced-settings`) : l("/my-account/domains"))
        .row.my-5
          .col
            h2= t("Do you offer unlimited domains for one price?")
            p.lead!= t('<span class="font-weight-bold">Yes.</span> Regardless of which plan you are on, you will pay only one monthly rate &ndash; which covers all of your domains.')
        .row.my-5
          .col
            h2= t("Which payment methods do you accept?")
            p.lead!= t('We accept cards, wallets, and bank transfers using <a class="alert-link" href="https://stripe.com/global" target="_blank" rel="noopener noreferrer">Stripe</a> and <a class="alert-link" href="https://www.paypal.com" target="_blank" rel="noopener noreferrer">PayPal</a>.')
        .row.my-5
          .col
            h2= t("Do you accept one-time payments and subscriptions?")
            p.lead!= t('<span class="font-weight-bold">Yes.</span> We accept both one-time payments or monthly, quarterly, and yearly subscriptions.')
        .row.my-5
          .col
            h2= t("Will you ever increase prices?")
            p.lead!= t('<span class="font-weight-bold">No.</span> Prices will never increase. Unlike other companies, we will never shutdown our service either.')
        .row.my-5
          .col
            h2= t("Do you offer a money-back guarantee?")
            p.lead!= t('<span class="font-weight-bold">Yes.</span> We offer a 30 day money-back guarantee &ndash; with no questions asked.')
        .row.my-5
          .col
            h2= t("Do you store SMTP logs or write to disk?")
            p.lead
              != t('<span class="font-weight-bold">No.</span> We have a <a href="%s">Privacy</a> policy of strictly not storing SMTP logs, metadata, nor emails.', l("/privacy"))
              = " "
              = t("You will find that every other email forwarder either stores SMTP logs and writes your emails to disk storage.")
              = " "
              = t("This common practice is a huge security risk for you, and is another reason why we built our service.")
              = " "
              = t("Our expertise allowed us to build our own custom solution that uses memory-based streams, and is lightning fast and privacy-focused.")
            p.lead.font-weight-bold: u= t("We don't track you like other services do.")
        .row.my-5
          .col
            h2= t("Do you have any other questions?")
            p.lead= t("We are always available and usually respond within minutes of your help request.")
            ul.list-inline
              li.list-inline-item
                a.btn.btn-lg.btn-dark(
                  href=l("/help"),
                  role="button",
                  data-target="#modal-help"
                )= t("Contact Help")
              li.list-inline-item
                a.btn.btn-lg.btn-primary(
                  href=l("/faq")
                )= t("Read FAQ")
        .mt-5.text-truncate
          noscript
            img(
              src=manifest("img/logo-square.svg"),
              width=400,
              height=400,
              alt=""
            ).img-fluid
          img.lazyload.no-js(
            data-src=manifest("img/logo-square.svg"),
            width=400,
            height=400,
            alt=""
          ).img-fluid
