footer
  .container.py-3.mt-3
    .row
      .col-12.text-center
        a(href=config.urls.web)
          img.d-inline-block.align-middle(
            src=manifest("img/apple-touch-icon.png"),
            width=90,
            height=90,
            alt=""
          )
        ul.m-0.p-0.text-muted.py-3
          li.px-1.d-inline.small: a.text-muted(
            href=`${config.urls.web}/${locale}`
          )= t("Home")
          li.px-1.d-inline.small: a.text-muted(
            href=`${config.urls.web}/${locale}/my-account`
          )= t("My Account")
          li.px-1.d-inline.small: a.text-muted(
            href=`${config.urls.web}/${locale}/privacy`
          )= t("Privacy")
          li.px-1.d-inline.small: a.text-muted(
            href=`${config.urls.web}/${locale}/terms`
          )= t("Terms")
